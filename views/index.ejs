            <div class="container-sm mt-2 text-light rounded p-2 overflow-hidden">
                <h1>URL Shortener Tool</h1>
                <p>This is a URL shortening tool you can use to shorten all your URLS and keep track of how much clicks the website has.</p>
                <form action="/shortUrls" method="POST" class="my-4 form-inline">
                    <div class="input-group mb-3">
                        <label class="visually-hidden" for="fullUrl">Url</label>
                        <button type="submit" class="btn btn-primary me-2 rounded">Shrink</button>
                        <input placeholder="Url" type="url" name="fullUrl" id="fullUrl" class="form-control col rounded" required>
                    </div>
                </form>
    
                <!--<table class="table table-sm table-striped table-responsive table-dark">
                    <thead>
                        <tr>
                            <th>Full URL</th>
                            <th>Short URL</th>
                            <th>Clicks</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% shortUrls.forEach(shortUrl => { %>
                            <tr>
                              <td><a class="text-wrap" href="<%= shortUrl.full %>"><%= shortUrl.full %></a></td>
                              <td><a href="<%= shortUrl.short %>"><%= shortUrl.short %></a></td>
                              <td><%= shortUrl.clicks %></td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>-->

                <div class="d-flex flex-column bd-highlight mb-3 gap-2">
                    <% shortUrls.forEach(shortUrl => { %>
                        <div class="d-flex flex-column p-2 border border-2 border-primary rounded">
                            <div class="d-flex flex-row overflow-hidden">
                                <p class="lead m-0 me-1">Shortened:</p>
                                <a class="lead link-primary" href="<%= shortUrl.short %>"><%= shortUrl.short %></a>
                            </div>
                            <div class="d-flex flex-row overflow-hidden">
                                <p class="small m-0 me-1 text-nowrap">Full Link:</p>
                                <a class="small link-secondary" href="<%= shortUrl.full %>"><%= shortUrl.full %></a>
                            </div>
                            <div class="d-flex flex-row overflow-hidden">
                                <p class="small m-0 me-1">Clicks:</p>
                                <p class="small m-0"><%= shortUrl.clicks %></p>
                            </div>
                        </div>
                    <% }) %>
                </div>
